<!DOCTYPE html>
<html ng-app="BstBahamas">
<head>
  <title>BstBahamas</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body ng-controller="IndexCtrl">
<div class="header fixed-top">
    <div class="row">
        <div id="company" class="col-md-4 col-xs-12">
            <h2 id="name">BST Bahamas</h2>
        </div>
        <div class="col-md-3  col-xs-12">
            <div id="banner">
                <h4>Create Free Local Classified Ads</h4>
            </div>
        </div>
        <div id="accNav" class="col-md-4">
            <div class="nav-links">
                <ul id="nav">
                    <span ng-show='loggedIn == false'>
                        <li id="login"><a href="#login">Login</a></li>
                        <li id="signup"><a href="#sign_up">Register</a></li>
                    </span>
                    <span ng-show='loggedIn ==  true'>
                        <li id="logout"><a href="#">Logout</a></li>
<!--                        <li id="signup"><a href="#sign_up">Register</a></li>-->
                    </span>
                    <li id="postAd"><a href="#post_ad">Post Ad Free</a></li>
                </ul>
            </div>
        </div>
    </div>
    <br/>
    <div class="row" id="searchbar">
        <div class="col-md-4 col-md-offset-1" id="search">
            <input type="text" ng-model="suggestion.name" placeholder="Search"/>
            <button class="btn btn-primary btn-md"><span class="glyphicon glyphicon-search"></span></button>
        </div>
        <div class="col-md-3 customSel" >
            <select ng-options='category.name for category in categories' ng-model="category" id="category">
                <option value="" selected>All Categories</option>
            </select>
        </div>
        <div class="col-md-3 customSel">
            <select ng-options="location.name for location in locations" ng-model="location.name">
                <option value="" selected>All Locations</option>
            </select>
        </div>
    </div>
</div>
<br>
<div class="row" id="mainCnt">
    <!-- <div class="col-md-2">
        <featured-ads></featured-ads>
    </div> -->
    <div id="view" class="col-md-10" ng-view>
      <%= yield %>
    </div>
    <div id="adsense" class="col-md-2" my-ad-sense>
  <!-- Google AdSense -->
      <script async src="http://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <ins class="adsbygoogle"
           style="width:100%; height:760px; float:right;"
           ad-client="ca-pub-0000000000"
           ad-slot="0000000000"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
</div>


</body>
</html>
